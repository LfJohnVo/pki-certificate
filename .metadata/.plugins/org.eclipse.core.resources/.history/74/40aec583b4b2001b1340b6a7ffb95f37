package com.udemy.pki.core;

import java.io.FileInputStream;
import java.io.InputStream;
import java.security.KeyStore;

public class CertificateStore {
	
	public static void getCertificateFromFile(String path, String key) {
		try {
			KeyStore jks = KeyStore.getInstance("PKCS12");
			InputStream in = new FileInputStream(path);
			jks.load(in, key.toCharArray());
			in.close();
			
			String aliasJks = jks.aliases().nextElement();
			PrivateKey pk = jks.getKey(aliasJks, key.toCharArray());
			
		}catch (Exception e) {
			e.printStackTrace();
		}//catch
	}//termina metodo
	
}//termina class
